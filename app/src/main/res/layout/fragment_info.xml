<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/old_background"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_flag_mk"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/flag_mk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_flag_en"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/flag_en"
        app:layout_constraintEnd_toStartOf="@id/image_view_flag_mk"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_description_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="www.linkedin.com/in/antoniojovanoski"
        app:layout_constraintTop_toBottomOf="@id/image_view_flag_mk" />
    <TextView
        android:id="@+id/text_view_description_info_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="jovanoskiantonio1998@gmail.com"
        app:layout_constraintTop_toBottomOf="@id/text_view_description_info" />

    <ImageView
        android:id="@+id/image_view_first_logo"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/android_completed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_description_info_mail" />
    

</androidx.constraintlayout.widget.ConstraintLayout>